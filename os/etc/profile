umask 022

if [[ ":$LD_LIBRARY_PATH:" != *":/usr/local/lib:"* ]]; then
  export LD_LIBRARY_PATH="/usr/local/lib:${LD_LIBRARY_PATH}"
fi

export PATH=/usr/local/bin:/usr/local/sbin:/usr/bin:/usr/sbin:/sbin:/bin:/opt/bun/bin:/opt/rust/bin
export BUN_INSTALL=/opt/bun
export RUSTUP_HOME=/opt/rust
export CARGO_HOME=/opt/rust
export GOPATH=/usr
export PAGER=bat
export PNPM_HOME="/opt/pnpm"
export PATH="$PNPM_HOME:$PATH"
export RTX_DATA_DIR=/opt/rtx
export RTX_CACHE_DIR=/cache/rtx


eval $(rtx env)

/etc/run_dir.sh /etc/profile.d
